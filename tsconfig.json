{
  "compilerOptions": {
    "target": "ESNext",                       
    "lib": ["DOM", "DOM.Iterable", "ESNext"], 
    "jsx": "react-jsx",                       
    "module": "ESNext",
    "moduleResolution": "Bundler",           
    "baseUrl": ".",                           
    "paths": {
      "@/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true                            
  },
  "include": ["src"]
}